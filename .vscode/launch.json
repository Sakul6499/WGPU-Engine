{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Desktop",
            "program": "${workspaceFolder}/target/debug/platform_desktop",
            "windows": {
                "program": "${workspaceFolder}/target/debug/platform_desktop.exe",
            },
            "args": [],
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "[Desktop] Debug Build",
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "RenderDoc",
            "program": "echo",
            "args": [
                "Only works on Windows currently!"
            ],
            "windows": {
                "program": "C:/Program Files/RenderDoc/renderdoccmd.exe",
                "args": [
                    "capture",
                    "--working-dir",
                    "${workspaceFolder}",
                    "--capture-file",
                    "${workspaceFolder}/target/debug/renderdoc/",
                    "--opt-api-validation",
                    "--opt-capture-callstacks",
                    "--opt-verify-buffer-access",
                    "--opt-hook-children",
                    "--opt-ref-all-resources",
                    "--opt-capture-all-cmd-lists",
                    "${workspaceFolder}/target/debug/wgpu_engine.exe"
                ],
            },
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Debug Build",
            "sourceLanguages": [
                "rust"
            ],
        }
    ]
}